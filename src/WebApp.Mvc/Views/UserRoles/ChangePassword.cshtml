    ViewData["Title"] = "Alterar Senha";
}

<h1>@ViewData["Title"]</h1>
<h2>Resetar senha do usuário </h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                     
